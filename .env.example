# Database Configuration
# Used by docker-compose.yml and docker-compose.dev.yml for PostgreSQL
POSTGRES_DB=bgpack
POSTGRES_USER=bgpack_user
POSTGRES_PASSWORD=bgpack_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# pgAdmin Configuration
# Web UI for database management (accessible via http://localhost:PGADMIN_PORT)
PGADMIN_EMAIL=bgpack@example.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Spring Boot Application Configuration
# These are read by docker-compose and passed to backend container
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/bgpack
SPRING_DB_USERNAME=bgpack_user
SPRING_DB_PASSWORD=bgpack_pass
SERVER_PORT=8080

# Security Configuration
# Must be at least 32 characters long
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long_enough

# BoardGameGeek API Token
# Get from: https://boardgamegeek.com/account
BGG_API_TOKEN=your_bgg_api_token_here
